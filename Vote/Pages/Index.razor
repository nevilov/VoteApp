@page "/"
@inject NavigationManager NavigationManager
@using System.Net.Http
@inject HttpClient Http

<div class="main page">
    <div class="main_voting">
        <button type="button" class="btn btn-success" @onclick="OpenVoting">Create vote</button>
    </div>
    <div class="vote info" @onclick ="VoteInfo">
        @foreach (var vote in votings) {
            <div class="container">
                <div class="row">
                    <div class="col-sm">
                        Title: @vote.TitleVoting
                    </div>
                    <div class="col-sm">
                        Desciption: @vote.DescriptionVoting
                    </div>
                    <div class="col-sm">
                        End Vote: @vote.End_dateVoting
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@code{
    public void OpenVoting() {
        NavigationManager.NavigateTo("CreateVoting");
    }

    public void VoteInfo() {
        NavigationManager.NavigateTo("VoteInfo");
    }

    private List<Vote.Models.OptionVoting> votings = new List<Models.OptionVoting>();

    protected override async Task OnInitializedAsync() {
        votings = await Http.GetFromJsonAsync<List<Vote.Models.OptionVoting>>("api/voting"); // Получаем данные из севрера
    }
}

